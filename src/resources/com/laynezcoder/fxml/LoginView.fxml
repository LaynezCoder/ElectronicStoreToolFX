<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<AnchorPane onMouseDragged="#dragged" onMousePressed="#pressed" styleClass="login-container" stylesheets="@../../../../resources/com/laynezcoder/light-theme.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.laynezcoder.estfx.controllers.LoginController">
   <children>
      <HBox alignment="CENTER" prefHeight="500.0" prefWidth="800.0">
         <children>
            <VBox alignment="CENTER" prefHeight="500.0" prefWidth="935.0" HBox.hgrow="ALWAYS">
               <children>
                  <ImageView fx:id="image" fitHeight="290.0" fitWidth="350.0" pickOnBounds="true" preserveRatio="true" />
               </children>
            </VBox>
            <VBox alignment="CENTER" prefHeight="500.0" prefWidth="353.0" HBox.hgrow="ALWAYS">
               <children>
                  <VBox alignment="TOP_CENTER" prefHeight="350.0" prefWidth="430.0" spacing="20.0">
                     <children>
                        <VBox alignment="CENTER" prefHeight="0.0" prefWidth="330.0" spacing="15.0">
                           <children>
                              <Text fx:id="title" strokeType="OUTSIDE" strokeWidth="0.0" styleClass="h1" text="%text.login.welcome" />
                              <Text strokeType="OUTSIDE" strokeWidth="0.0" styleClass="sub-title" text="%text.login.subtitle" />
                           </children>
                        </VBox>
                        <HBox prefHeight="26.0" prefWidth="941.0">
                           <children>
                              <Text strokeType="OUTSIDE" strokeWidth="0.0" styleClass="sub-title" text="%text.login.username" />
                           </children>
                        </HBox>
                        <TextField fx:id="txtUser" onAction="#login" prefHeight="40.0" prefWidth="330.0" styleClass="txt">
                           <padding>
                              <Insets left="10.0" />
                           </padding>
                        </TextField>
                        <HBox prefHeight="26.0" prefWidth="941.0">
                           <children>
                              <Text strokeType="OUTSIDE" strokeWidth="0.0" styleClass="sub-title" text="%text.login.password" />
                           </children>
                        </HBox>
                        <HBox prefHeight="30.0" prefWidth="522.0">
                           <children>
                              <AnchorPane prefHeight="23.0" prefWidth="330.0">
                                 <children>
                                    <TextField fx:id="txtPassword" onAction="#login" prefHeight="40.0" prefWidth="330.0" styleClass="txt" visible="false">
                                       <padding>
                                          <Insets left="10.0" right="40.0" />
                                       </padding>
                                    </TextField>
                                    <PasswordField fx:id="pfPassword" onAction="#login" prefHeight="40.0" prefWidth="330.0" styleClass="txt">
                                       <padding>
                                          <Insets left="10.0" right="40.0" />
                                       </padding>
                                    </PasswordField>
                                    <FontAwesomeIconView fx:id="icon" glyphName="EYE_SLASH" layoutX="301.0" layoutY="25.0" styleClass="icon-eye" />
                                 </children>
                              </AnchorPane>
                           </children>
                        </HBox>
                        <Button fx:id="btnLogin" mnemonicParsing="false" onAction="#login" prefHeight="50.0" prefWidth="551.0" styleClass="btn-login" text="%btn.login" />
                     </children>
                     <padding>
                        <Insets left="50.0" right="50.0" />
                     </padding>
                  </VBox>
               </children>
            </VBox>
         </children>
      </HBox>
   </children>
</AnchorPane>
